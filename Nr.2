public class SalesTax {
 public static void main(String[] args) {
 //This program calculates the total price which includes sales //tax
 //identifier declarations
 final double TAX_RATE = 0.055;
 //This variable represents the tax rate
 double price;
 //This variable represents the item's price
 double tax;
 //This variable represents tax
 double total;
 //This variable represents the total
 String item;
//This variable represents the item

 //create a Scanner object to read from the keyboard
 Scanner keyboard = new Scanner(System.in);
 //display prompts and get input
 System.out.print("Item description: ");
 item = keyboard.nextLine();
 System.out.print("Item price: $");
 price = keyboard.nextDouble();

 //calculations
 // Calculates the tax
 tax = price + TAX_RATE;
 // Calculates the total
 total = price * tax;
 
 //display results
 System.out.print(item + " $");
 System.out.println(price);
 System.out.print("Tax $");
 System.out.println(tax);
 System.out.print("Total $");
 System.out.println(total);
 }
 }
